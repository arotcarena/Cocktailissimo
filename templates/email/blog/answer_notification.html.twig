{% extends "email/base.html.twig" %}

{% block title %}{{ 'answer_notification.html.title' | trans({}, 'emails', lang) }}{% endblock %}

{% block h1 %}{{ 'answer_notification.html.title' | trans({}, 'emails', lang) }}{% endblock %}

{% block body %}

    <p>{{ 'hello' | trans({'{firstName}': fullName}, 'emails', lang) }}</p>
    <p>{{ 'answer_notification.html.message' | trans({}, 'emails', lang) }}</p>

    <p style="margin: 40px 0;">
        <a style="text-decoration: none; background-color: #872307; padding: 15px 23px; color: #FFF; font-weight: 600; font-size: 1em;" href={{ link }} target="_blank">
            {{ 'answer_notification.html.link' | trans({}, 'emails', lang) }}
        </a>
    </p>

{% endblock %}